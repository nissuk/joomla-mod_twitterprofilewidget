<?xml version="1.0" encoding="utf-8"?>
<install method="upgrade" type="module" version="1.5.0">
	<name>Twitter Profile Widget</name>
	<author>NISHIMURA Shunsuke</author>
	<creationDate>December 2010</creationDate>
	<copyright>Copyright (C) NISHIMURA Shunsuke. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>x@nissuk.info</authorEmail>
	<authorUrl>nissuk.info</authorUrl>
	<version>1.0.0</version>
	<description></description>
	<files>
		<filename module="mod_twitterprofilewidget">mod_twitterprofilewidget.php</filename>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <folder>tmpl</folder>
	</files>
	<params>
    <param name="username" type="text" default="" label="Username" description="" />

    <param name="@spacer" type="spacer" default="" label="" description="" />

    <param name="live" type="radio" default="0" label="Poll for new results?" description="">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="scrollbar" type="radio" default="0" label="Include scrollbar?" description="">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="behavior" type="radio" default="2" label="Behavior" description="">
      <option value="1">Timed Interval</option>
      <option value="2">Load all tweets</option>
    </param>
    <param name="loop" type="radio" default="1" label="Loop results?" description="">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="interval" type="text" default="6" label="Tweet Interval?" description="" />
    <param name="rpp" type="text" default="4" label="Number of Tweets" description="" />
    <param name="avatars" type="radio" default="0" label="Show Avatars?" description="">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="timestamp" type="radio" default="1" label="Show Timestamps?" description="">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="hashtags" type="radio" default="1" label="Show hashtags?" description="">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>

    <param name="@spacer" type="spacer" default="" label="" description="" />

    <param name="shell_background" type="text" default="#0084B4" label="Shell background" description="" />
    <param name="shell_color" type="text" default="#ffffff" label="Shell text" description="" />
    <param name="tweet_background" type="text" default="#ffffff" label="Tweet background" description="" />
    <param name="tweet_color" type="text" default="#333333" label="Tweet text" description="" />
    <param name="tweet_links" type="text" default="#0084B4" label="links" description="" />

    <param name="@spacer" type="spacer" default="" label="" description="" />

    <param name="width" type="text" default="250" label="Width (in px)" description="" />
    <param name="auto_width" type="radio" default="0" label="or auto width?" description="">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="height" type="text" default="300" label="Height (in px)" description="" />
  </params>
</install>
